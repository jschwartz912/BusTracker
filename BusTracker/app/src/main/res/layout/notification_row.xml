<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="1"
    android:columnCount="3">

    <RelativeLayout
        android:layout_width="120dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/fromWrap"
        android:layout_column="0"
        android:layout_row="0"
        android:elevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:gravity="center"
            android:text="From Event"
            android:id="@+id/fromTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="12dp"
            android:text="From Location"
            android:id="@+id/fromLocation"
            android:layout_below="@+id/fromTitle"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_column="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_row="0"
        android:id="@+id/wrapArrow">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrow"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_forward_24dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Time"
            android:id="@+id/time"
            android:layout_below="@+id/arrow"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/toWrap"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/wrapArrow"
        android:layout_column="2"
        android:layout_row="0"
        android:elevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="To Event"
            android:textSize="14dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/toTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toTitle"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="To Location"
            android:id="@+id/toLocation"/>

    </RelativeLayout>

</GridLayout>